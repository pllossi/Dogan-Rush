<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dogan_Rush.View.Regole"
             Title="Regole">
    <VerticalStackLayout>
        <Label
            Text="Regolamento: "
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Label
            Text="Il gioco consiste nel dover decidere "
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Label
            Text="se una persona può passare la dogana"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Label
            Text="e il tuo compito sarà quello di decidere se passano o no."
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Label
            Text="Sarai all'altezza?"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Button
            Command="{Binding }"
            Text="Indietro"
            Margin="0,0,100,0" />
    </VerticalStackLayout>
</ContentPage>