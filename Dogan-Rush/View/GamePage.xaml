<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dogan_Rush.View.GamePage"
             Title="SchermataGioco">
    <VerticalStackLayout>
        <Label
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
    </VerticalStackLayout>



    <AbsoluteLayout>

        <!-- Sfondo -->
        <Image Source="sfondo_partebassa.png"
            Aspect="AspectFill"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" />

        <!-- Pulsante VISA -->
        <Button Text="Visa"
             FontAttributes="Bold"
             FontSize="20"
             TextColor="White"
             AbsoluteLayout.LayoutBounds="0.5,0.67,350,85"
             AbsoluteLayout.LayoutFlags="PositionProportional" 
             Clicked="Btn_Visa"
             />

        <!-- Pulsante Id -->
        <Button Text="Id"
             FontAttributes="Bold"
             FontSize="20"
             TextColor="White"
             AbsoluteLayout.LayoutBounds="0.5,0.67,350,85"
             AbsoluteLayout.LayoutFlags="PositionProportional" 
             Clicked="Btn_Id"
                />

        <!-- Pulsante ENTRY -->
        <Button Text="Entry"
          FontAttributes="Bold"
          FontSize="20"
          TextColor="White"
          AbsoluteLayout.LayoutBounds="0.5,0.67,350,85"
          AbsoluteLayout.LayoutFlags="PositionProportional" 
          Clicked="btn_Entry"
          />

        <!-- Pulsante INDIETRO -->
        <Button Text="INDIETRO"
             FontAttributes="Bold"
             FontSize="20"
             TextColor="White"
             AbsoluteLayout.LayoutBounds="0.5,0.89,350,85"
             AbsoluteLayout.LayoutFlags="PositionProportional"
             Clicked="btnIndietro_MainPage"
             />

    </AbsoluteLayout>
    
</ContentPage>