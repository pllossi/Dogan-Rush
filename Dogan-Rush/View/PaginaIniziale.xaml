<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dogan_Rush.MainPage">

    <Grid>
        <!-- Immagine di sfondo -->
        <Image Source="Resources/Images/Office/Controllo di Frontiera Pixelato.png"
               Aspect="AspectFill"
               Opacity="0.5" />

        <!-- Contenuto della pagina -->
        <ScrollView>
            <VerticalStackLayout>

                <Label Text="Benvenuto in Dogan Rush!"
                       SemanticProperties.HeadingLevel="Level1"
                       HorizontalOptions="Center" />

                <Label Text="Scegli un'opzione per iniziare:"
                       SemanticProperties.HeadingLevel="Level2"
                       HorizontalOptions="Center" />

                <Button x:Name="btnInizia"
                        Text="Inizia"
                        Clicked="btnInizia_Clicked"
                        HorizontalOptions="Center" />

                <Button x:Name="btnIstruzioni"
                        Text="Istruzioni"
                        Clicked="btnIstruzioni_Clicked"
                        HorizontalOptions="Center" />
                <Button
                    x:Name="CounterBtn"
                    Text="Click me"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
