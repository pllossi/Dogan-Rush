<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dogan_Rush.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            
            
            <Label Text="Benvenuto in Dogan Rush!"
                   SemanticProperties.HeadingLevel="Level1"
                   HorizontalOptions="Center" />

            <Label Text="Scegli un'opzione per iniziare:"
                   SemanticProperties.HeadingLevel="Level2"
                   HorizontalOptions="Center" />

            <Button x:Name="btnInizia"
                    Text="Inizia"
                    Clicked="btnInizia_Clicked"
                    HorizontalOptions="Center" />

            <Button x:Name="btnIstruzioni"
                    Text="Istruzioni"
                    Clicked="btnIstruzioni_Clicked"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
